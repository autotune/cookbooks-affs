[logging]
 default = FILE:/var/log/krb5libs.log
 kdc = FILE:/var/log/krb5kdc.log
 admin_server = FILE:/var/log/kadmind.log

[libdefaults]
 default_realm = <%= @realm.upcase %>
 dns_lookup_realm = false
 dns_lookup_kdc = false
 ticket_lifetime = 24h
 renew_lifetime = 7d
 forwardable = true

[realms]
  <%= @realm.upcase -%> = {

  <% @krb5_kdcs.each do |server| -%>
  kdc = <%= server[:cloud][:public_ips] %>
  <% end -%>

  admin_server = <%= @krb5_kdcs.first[:cloud][:public_ips] %>
 }

[domain_realm]
 .<%= @realm -%> = <%= @realm.upcase %>
 <%= @realm -%> = <%= @realm.upcase %>

