  directory "/var/named";
  version "afistfulofdns";
  allow-transfer { "none"; };
  allow-recursion { "0.0.0.0/0"; };
  notify no;
};

options {
  directory "/var/named";
  version "afistfulofdns";
  allow-transfer { "none"; };
  notify no;
};

zone "." in {
        type hint;
        file "root.hint";
};

zone "localhost" in {
        type master;
        file "master/localhost.zone" ;
};

zone "0.0.127.in-addr.arpa" in {
        type master;
        file "master/localhost.rev" ;
};

<% @dnsdomains.each do |dnsdomain| -%>
zone <%= dnsdomain %> {
        type master;
        file "/var/named/master/<%= dnsdomain %>.zone";
};

<% end -%>
